@model IEnumerable<Evaluate.Models.SubscriptionsViewModel>

@{
    ViewBag.Title = "Suscripciones Pendientes";
}

<div class="panel-heading bg-white">
    <h2>@ViewBag.Title</h2>
</div>
<br />

<div class="table-responsive">
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CareerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlanName)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.ValidTime)
            </th>
            <th></th>*@
        </tr>

        @foreach (var item in Model)
        {
            @*<tr @(item.StartDate == null ? "class=danger" : "class=success") onclick="location.href = '@(Url.Action("Edit", "StudentCareers", new { Id = item.StudentCareerId }))'">*@
            <tr onclick="location.href = '@(Url.Action("Edit", "StudentCareers", new { Id = item.StudentCareerId }))'">
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CareerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PlanName)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.ValidTime)
                </td>
                <td>
                    @if (item.StatusId == 0)
                    {
                        <span class="label label-danger">No Autorizado</span>
                    }
                    else if (item.StatusId == 1)
                    {
                        <span class="label label-success">Solicitado</span>
                    }
                    else if (item.StatusId == 2)
                    {
                        <span class="label label-danger">Activo</span>
                    }
                </td>*@
            </tr>
        }

    </table>
</div>

